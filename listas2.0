#include <iostream>
#include <list>
using namespace std;
//declarar
void mostrar(list<string> & frutas_);
void mostrar3(const list<string> & frutas_);
void mostrar4(list<string> & frutas_);
main()
{
	//lista
	list <string> frutas;
	//iterador
	list <string>::iterator puntero;
	//Agreegar elementos a una lista
	
	frutas.push_back("Pera");
	frutas.push_back("Mango");
	frutas.push_back("Uva");
	frutas.push_back("Guayaba");
	frutas.push_back("Melon");
	frutas.push_back("Sandia");
	
	//Tama単o de la lista
	cout<<"El tama単o es:"<<frutas.size();
	frutas.pop_back();
	cout<<"\nEl tama単o es:"<<frutas.size();
	frutas.pop_back();
	cout<<"\nEl tama単o es:"<<frutas.size();
	
	puntero=frutas.begin();
	cout<<"\nFrente: "<<*puntero;
	frutas.insert(puntero,"naranja");
	
	puntero=frutas.end();
	frutas.insert(puntero,"mandarina");
	//simple
	mostrar(frutas);
	//constante
	mostrar3(frutas);
	mostrar4(frutas);
}

void mostrar(list<string> & frutas_)
{
	list<string>::iterator pos;
	pos=frutas_.begin();
	cout<<"\n------------------"<<endl;
	cout<<"Los elementos de la lista:"<<endl;
	
	while(pos != frutas_.end())
	{
		cout <<*pos<<endl;
		pos++;
	}
}


void mostrar3(const list<string> & frutas_)
{
	list<string>::const_iterator pos;
	pos=frutas_.begin();
	cout<<"\n------------------"<<endl;
	cout<<"Los elementos de la lista:"<<endl;
	
	while(pos != frutas_.end())
	{
		cout <<*pos<<endl;
		pos++;
	}
}
void mostrar4(list<string> & frutas_)
{
	list<string>::reverse_iterator pos;
	pos=frutas_.rbegin();
	cout<<"\n------------------"<<endl;
	cout<<"Los elementos de la lista:"<<endl;
	
	while(pos != frutas_.rend())
	{
		cout <<*pos<<endl;
		pos++; 
	}
}
